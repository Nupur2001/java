package com.company;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        int km;
        float a=0.621f;
        Scanner in=new Scanner(System.in);
        System.out.println("Enter a number");
        km=in.nextInt();
        float miles=km*a;
        System.out.println("miles:" +miles);
    }
}
